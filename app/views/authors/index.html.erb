<h1>Listing authors</h1>

<table class="listing">
<% for author in @authors %>
  <tr>
    <td class="author-name"><%=link_to h(author.name), author %></td>
    <td><%= link_to 'Edit', edit_author_path(author) %> | <%= link_to 'Destroy', author, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

